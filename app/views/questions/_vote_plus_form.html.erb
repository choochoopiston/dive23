<% if signed_in? && current_user.vote_plus?(question) %>
    <%= link_to question_vote_path(question, current_user.votes.find_by(question_id: question.id), vote: "posi"), :method => :delete do %>
        <i class="fa fa-caret-up fa-3x contribution_up"></i>
    <% end %>
<% else %>
    <%= link_to question_votes_path(question, vote: "posi"), :method => :post do %>
        <i class="fa fa-caret-up fa-3x contribution_up"></i>
    <% end %>
<% end %>
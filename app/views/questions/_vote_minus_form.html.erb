<% if signed_in? && current_user.vote_minus?(question) %>
    <%= link_to question_vote_path(question, current_user.votes.where(is_positive: false).find_by(question_id: question.id), vote: "nega"), :method => :delete do %>
        <i class="fa fa-caret-down fa-3x vote_after"></i><br />
    <% end %>
<% else %>
    <%= link_to question_votes_path(question, vote: "nega"), :method => :post do %>
        <i class="fa fa-caret-down fa-3x vote_before"></i><br />
    <% end %>
<% end %>